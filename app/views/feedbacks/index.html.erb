<% @header = "Alle Feedbacks" %>

<% if current_user -%>
    <%= link_to 'Atfal Programm anlegen', new_feedback_path, class: "btn btn-large btn-primary btn-block" %><br>
<% end -%>

<table class="table table-bordered table-striped">
  <tr class="active">
    <th>Comment Nr.</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feedbacks.each do |feedback| %>
  <tr>
    <td><%= feedback.id %></td>
    <td><%= feedback.rating %></td>
    <td><%= link_to 'Show', feedback, class: "label label-info" %></td>
    <td><%= link_to 'Edit', edit_feedback_path(feedback), class: "label label-info" %></td>
    <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger" %></td>
  </tr>
<% end %>
</table>

<br />