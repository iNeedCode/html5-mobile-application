<% @header = "Alle Beschreibungen der Spiele" %>


<% if current_user -%>
    <%= link_to 'Neue Spielart anlegen', new_game_path, class: "btn btn-large btn-primary btn-block" %><br>
<% end -%>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

