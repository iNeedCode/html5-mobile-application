<% @header = "#{@competition.title}" %>

<p id="notice"><%= notice %></p>

<p>
	<%= raw @competition.description %>
</p>

<p class="text-center">
	<em>zuletzt ge&auml;ndert: <%= @competition.updated_at.strftime("%d.%m.%Y um %H:%M") %></em>
</p>

<% if current_user %>
	<%= link_to 'Edit', edit_competition_path(@competition), class: "btn btn-default"  %>
	<%= link_to 'Back', competitions_path, class: "btn btn-default"  %>
<% end %>