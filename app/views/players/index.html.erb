<% @header = "Alle Spieler" %>

<table class="table-striped">
  <tr>
    <th>Name</th>
    <th>Zone</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.zone %></td>
    <td><%= player.region %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-block btn-danger" %></td>
  </tr>
<% end %>
</table>

