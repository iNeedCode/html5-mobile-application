<% @header = "Alle Spieler" %>

<%= link_to 'Neuen Spieler eintragen', new_player_path, class: "btn btn-large btn-primary btn-block" %>
<br>

<table class="table table-striped table-condensed table-hover">
  <thead>
    <th>Name</th>
    <th>Zone</th>
    <!-- <th>Region</th> -->
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @regions = all_regions -%>
<% @players.each do |player| %>
  <% if @regions.include?(player.region) %>
    <tr class="warning"><td colspan="5">Region: <strong><%= player.region %></strong></td></tr>
    <% @regions.delete(player.region) -%>
  <% end -%>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.zone %></td>
    <!-- <td><%= player.region %></td> -->
    <td><%= link_to 'show', player, class: "icon-info-sign", title: "Show" %></td>
    <td><%= link_to 'edit', edit_player_path(player), class: "icon-wrench", title: "Edit" %></td>
    <td><%= link_to 'del', player, method: :delete, data: { confirm: 'Bist du sicher?' }, class: "icon-trash", title: "Delete" %></td>
  </tr>
<% end %>
</table>

<br />


