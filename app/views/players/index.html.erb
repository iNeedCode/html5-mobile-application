<% @header = "Alle Spieler" %>

<%= link_to 'Neuen Spieler eintragen', new_player_path, class: "btn btn-large btn-primary btn-block" %>
<br>
<table class="table table-striped table-brdered table-hover">
  <thead>
    <th>Name</th>
    <th>Zone</th>
    <!-- <th>Region</th> -->
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.zone %></td>
    <!-- <td><%= player.region %></td> -->
    <td><%= link_to '', player, class: "icon-info-sign", title: "Show" %></td>
    <td><%= link_to '', edit_player_path(player), class: "icon-wrench", title: "Edit" %></td>
    <td><%= link_to '', player, method: :delete, data: { confirm: 'Are you sure?' }, class: "icon-trash", title: "Delete" %></td>
  </tr>
<% end %>
</table>

<br />


